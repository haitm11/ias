<a class="popular-post-href" href="<%= post_path popular_post.display_id %>">
  <div class="popular-post">
    <div class="post-header">
      <div class="post-header-avatar">
        <img width="50" height="50" 
          src="https://opensource.propeller.in/assets/images/avatar-icon-40x40.png">
      </div>
      <div class="post-header-middle">
        <div class="post-header-username"><%= popular_post.expert.expert_name %></div>
        <div class="post-metadata">
          <span class="post-time"><%= popular_post.updated_at %></span>
          <span class="post-stock-name"><%= popular_post.stock.company_name %></span>
        </div>
        <div class="post-header-title"><%= popular_post.title %></div>
        <div class="post-statistics">
          <div class="post-like-number"><%= popular_post.likes.size %> lượt thích</div>
          <div>・</div>
          <div class="post-comment-number"><%= popular_post.comments.size %> bình luận</div>
        </div>
      </div>
    </div>
  </div>
</a>
