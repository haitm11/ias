<canvas id="expertChart"></canvas>
<script>
var doughnutChartData = {
  datasets: [{
    label: 'My First Dataset',
    data: [300, 50, 100],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)'
    ],
    hoverOffset: 4
  }], 
  labels: [
    'Buy',
    'Sell',
    'Hold'
  ]
};

var ctx = document.getElementById("expertChart").getContext("2d");
var myChart = new Chart(ctx, {
  type: "doughnut",
  data: doughnutChartData,
  options: { 
    plugins: {
      tooltip: {
        yAlign: "bottom"
      }
    }
  }
});
</script>
